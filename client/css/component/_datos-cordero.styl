.datos-cordero
    margin-top: 1em
    font-size: 1.25rem
    &__subtitle
        text-transform: uppercase
        color: _c-header
        span
            margin-right: .4em
        &--orange
            color: _c-orange

    &__text
        color: _c-gray-font
        font-family: 'Roboto', sans-serif
        margin-left: 1.8em
        margin-bottom: 3em
        font-size: 1rem
        &--white
            color: _c-white

    &--about
        margin-left: 0


@media screen and (min-width 40em)

    .datos-cordero
        &--about
            margin-left: 1em