.datos-cordero
    margin-top: 1em
    font-size: 1.25rem
    &__subtitle
        text-transform: uppercase
        color: _c-header
        span
            margin-right: .4em
        &--orange
            color: _c-orange

    &__text
        color: _c-gray-font
        font-family: 'Roboto', sans-serif
        margin: .5em 0 3em 1.8em
        font-size: 1rem
        font-weight: 500    
        &--white
            color: _c-white
        &--pag-contacto
            margin-bottom: 1em

    &--about
        margin-left: 0

    #mapa,
    #mapa2
        height: 250px
        width: 100%
        margin-bottom: 2em


@media screen and (min-width 40em)

    .datos-cordero
        &--about
            margin-left: 1em