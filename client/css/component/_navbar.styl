.header
    background-color: _c-header
    max-height: 3em
    z-index: 100
    position: fixed
    top: 0
    width: 100%
.logo
    box-shadow: 0px 7px 10px 0px rgba(0,0,0,0.4)
    border-radius: 0 0 10px 10px
    overflow: hidden
    &__img
        background-color: _c-white
        max-width: 6.5em
        img
            padding: .2em .5em
.nav-bar
    position: fixed
    bottom: 0
    background-color: _c-header
    width: 100%
    border-top: 3px solid _c-orange
    display: flex
    justify-content: space-between
    &__link
        color: _c-white-50
        text-transform: uppercase
        padding: .6em .8em
        font-weight: 300
        letter-spacing: 1px
        &--active
            color: _c-white


.phone
    align-self: stretch
    margin-left: auto
    &__text
        background-color: _c-orange
        padding: .75em .5em
        color: _c-white
        font-weight: 300
        text-shadow: 0px 2px 2px rgba(0,0,0,0.5)


@media screen and (min-width 40em)

    .logo
        &__img
            max-width: 8em
    
    .nav-bar
        position: initial
        max-width: 15em
        margin-left: auto
        padding-bottom: 1em
        background-color: transparent
        border-top: 0

    .phone
        margin-left: 1em
