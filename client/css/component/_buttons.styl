.button-contactanos
    display: none


.button-ver-sacos
    display: flex
    justify-content: center
    .button-orange
        display: flex
        border-radius: 5px
        overflow: hidden
        margin-top: .5em
        box-shadow: 0px 4px 5px 1px rgba(0,0,0,0.5)
        a
            text-transform: uppercase
            background-color: _c-orange
            color: _c-white
            font-weight: 500
            padding: .8em 5em
            text-shadow: 0px 2px 2px rgba(0,0,0,0.5)


@media screen and (min-width 40em)
    .button-contactanos
        display: flex
        justify-content: center
        .button-blue
            display: flex
            border-radius: 5px
            overflow: hidden
            margin-top: .5em
            box-shadow: 0px 4px 5px 1px rgba(0,0,0,0.5)
            a
                text-transform: uppercase
                background-color: _c-header
                color: _c-white
                font-weight: 300
                padding: .8em 5em

