.flexslider--d-none
    display: none

@media screen and (min-width 40em)
    .flexslider
        border: 0
        margin 0
        // overflow: hidden
        &--d-none
            display: block
    
    .flex-control-nav
        bottom: 7px

    .slides__item
        position: relative
    
    .slides__text
        position: absolute
        color: _c-white
        font-size: 3vw
        max-width: 12em
        text-align: center
        padding: 20vw 0 0 3em
        span
            color: _c-orange
            font-weight: 700
        &--right
            padding: 20vw 0 0 60vw
            max-width: 28em
