.about
    padding: 2em 1em 2em 1em
    background-color: _c-gray
    max-width: 53rem
    margin: 0 auto
    &__title
        text-transform: uppercase
        display: flex
        font-weight: 400
        color: _c-header
        align-items: center
        margin-bottom: .5em
        font-size: 1.8rem
        img
            margin: 0 .5em 0 0
            max-width: 2.5rem

    &__description
        font-family: 'Roboto' ,sans-serif
        color: _c-gray-font
    &__img
        padding: 1em
        img
            margin: 0 auto
@media screen and (min-width 30em)

    .about
        padding: 4em 2em .5em 2em

@media screen and (min-width 40em)

    .about
        padding: 2em
        &__title
            font-size: 2rem
            img
                margin-right: .5em
                max-width: 2.5rem

        &__description
            margin-left: 3em
            font-size: 1rem
  
    .container
        display: grid
        grid-template-columns: repeat(7, 1fr)
        grid-template-rows: repeat(4, 1fr)

    .img01
        grid-column: 1 / span 1
        grid-row: 1 / span 1
        background-image: url("../img/sacos-colores-amarillo-azul.jpg")
        background-repeat: no-repeat
        background-position: center center
        background-size: cover

    .img02
        grid-column: 2 / span 5
        grid-row: 1 / span 4
        background-color: _c-gray

    .img03
        grid-column: 7 / span 1
        grid-row: 1 / span 4
        background-color: _c-gray
        background-image: url("../img/saco-bigbag.png")
        background-repeat: no-repeat
        background-position: -16px center
        background-size: cover

    .img06
        grid-column: 1 / span 1
        grid-row: 2 / span 1
        background-image: url("../img/saco-yute-textura.jpg")
        background-repeat: no-repeat
        background-position: center center
        background-size: cover
        
    .img07
        grid-column: 1 / span 1
        grid-row: 3 / span 2
        background-image: url("../img/sacos-colores-verde-rojo.jpg")
        background-repeat: no-repeat
        background-position: center center
        background-size: cover

@media screen and (min-width 75em)

    .container
        grid-template-columns: repeat(10, 1fr)
        grid-template-rows: repeat(4, 1fr)

    .img02
        grid-column: 2 / span 6

    .img03
        grid-column: 8 / span 1

    .img04
        grid-column: 9 / span 2
        grid-row: 1 / span 2
        background-color: _c-gray
        background-image: url("../img/sacos-blancos-agrupados.jpg")
        background-repeat: no-repeat
        background-position: -16px center
        background-size: cover

    .img05
        grid-column: 9 / span 2
        grid-row: 3 / span 2
        background-image: url("../img/saco-yute-cosecha.jpg")
        background-repeat: no-repeat
        background-position: center center
        background-size: cover