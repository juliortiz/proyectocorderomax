body
    margin-bottom: 3em
.wrapper
    max-width: 75em
    margin: 0 auto
    position: relative

.d-none
    display: none

.d-flex
    display: flex
    align-items: center

.main
    margin-top: 48px

.section
    padding: 4em .5em
    &__title
        text-transform: uppercase
        color: _c-header
        text-align: center
    &--s-padding-horizontal
        padding-right: 0
        padding-left: 0
    &--s-padding-bottom
        padding-bottom: 0

@media screen and (min-width 40em)
    body
        margin-bottom: 0